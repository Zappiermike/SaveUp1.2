<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bills_list_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/income_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/errands_list_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/other_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/other_list_title"
        android:textSize="20sp" />


    <Button
        android:id="@+id/new_crime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/new_crime" />

    <Button
        android:id="@+id/new_income"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:text="@string/add_income_button" />

    <Button
        android:id="@+id/new_other"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="right"
        android:text="@string/new_other_button" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/crime_recycler_view"
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp">

    </android.support.v7.widget.RecyclerView>


</FrameLayout>